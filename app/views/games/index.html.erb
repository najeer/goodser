<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped", border=2px, border:1px>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %>
      </th>
      <th><%= model_class.human_attribute_name(:place) %>
      </th>
      <th><%= model_class.human_attribute_name(:animal) %>
      </th>
      <th><%= model_class.human_attribute_name(:thing) %>
      </th>
      <th><%= model_class.human_attribute_name(:time) %>
      </th>
      
    </tr>
    
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        
        <td><%= game.name %></td>
        <td><%= game.place %></td>
        <td><%= game.animal %></td>
        <td><%= game.thing %></td>
        <td><%= game.time %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_game_path(game), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      game_path(game),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_game_path,
            :class => 'btn btn-primary' %>
